{
  "name": "cypress-automation-framework",
  "version": "1.0.0",
  "description": "Cypress Automation project with cucumber and API testing support.",
  "main": "index.js",
  "scripts": {
   "cypress:open:dev:chrome": "cypress open --e2e --browser chrome -e ENV=DEV",
    "cypress:open:dev:edge": "cypress open --e2e --browser edge -e ENV=DEV", 
    "cypress:open:dev:firefox": "cypress open --e2e --browser firefox -e ENV=DEV",

    "cypress:runner:e2e:dev:chrome": "cypress run --spec cypress/journeys/features/e2e/**/Login.feature --browser chrome -e ENV=DEV,TAGS=@clase-8",  
    "cypress:runner:api:dev:chrome": "cypress run --spec cypress/journeys/features/api/**/*.feature --browser chrome -e ENV=DEV",  


    "cypress:runner:e2e:dev:smoke": "cypress run --spec cypress/journeys/features/e2e/**/*.feature --browser chrome -e ENV=DEV,TAGS=@smoke",  


    "cypress:open:tst:chrome": "cypress open --e2e --browser chrome -e ENV=TST",
    "cypress:open:tst:edge": "cypress open --e2e --browser edge -e ENV=TST", 
    "cypress:open:tst:firefox": "cypress open --e2e --browser firefox -e ENV=TST",

    "cypress:runner:e2e:tst:chrome": "cypress run --spec cypress/journeys/features/e2e/**/*.feature --browser chrome -e ENV=TST",
    "cypress:runner:api:tst:chrome": "cypress run --spec cypress/journeys/features/api/**/*.feature --browser chrome -e ENV=TST"
  },
  "keywords": [
    "Cypress",
    "Gherkin",
    "Cucumber",
    "API",
    "E2E",
    "Testing",
    "Automation"
  ],
  "author": "Daniela Barrios",
  "license": "ISC",
  "devDependencies": {
    "@badeball/cypress-cucumber-preprocessor": "^22.0.1",
    "@bahmutov/cypress-esbuild-preprocessor": "^2.2.4",
    "@cucumber/cucumber": "^11.2.0",
    "@faker-js/faker": "^9.6.0",
    "cypress": "^14.5.4",
    "cypress-automation-framework": "file:",
    "cypress-cucumber-preprocessor": "^4.3.1",
    "cypress-plugin-api": "^2.11.1",
    "esbuild": "latest",
    "eslint": "^9.22.0",
    "eslint-plugin-cypress": "^4.2.0",
    "multiple-cucumber-html-reporter": "^3.6.0"
  },
  "optionalDependencies": {
    "@esbuild/linux-x64": "0.24.0"
  }
}
